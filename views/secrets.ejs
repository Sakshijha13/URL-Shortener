<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <title>URL Shortener</title>
</head>
<body>
    <div class="container">
    <h1> URL Shortener</h1>
    <form action="/urlsubmission" method="POST" class="my-4 form-inline">
     <label for="fullUrl" class="sr-only">Url</label>
     <input requied placeholder="url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-4 ">
     <input name="username" value="<% username %>" class="hidden">
     <textarea name="Note" class="form-control col mr-4"></textarea>
     <button class=" btn btn-success"type="submit">Short The Url</button>
    </form>
    <form action="/search" method="POST">
      <input type="text" name="query" >
      <button class=" btn btn-success"type="submit">Search</button>
    </form>
    </div>
    <div class="container mr-4">
 <table class ="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            <%   shortUrls.forEach(shortUrl => { %>
                <tr>
                    <td><a herf="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                    <td><a href="<%= shortUrl.short %>"> <%=  shortUrl.short %></a></td>
                    
                    <td > <%= shortUrl.Note %> </td>
                </tr>
          <%  }); %>
            
        </tbody>
    </table>
</div>
</body>
</html>

